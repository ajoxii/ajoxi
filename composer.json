{
    "name": "ajoxii/ajoxi",
    "description": "Official website for Ajoxi, delivering advanced cloud communication, VoIP, and contact center solutions to businesses worldwide.",
    "type": "project",
    "version": "1.0.0",
    "license": "MIT Licence",
    "authors": [
        {
            "name": "Ariyan Khan",
            "email": "info@ajoxi.com",
            "homepage": "https://www.linkedin.com/in/ariyankhan92/",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.ajoxi.com/",
    "support": {
        "issues": "https://github.com/ajoxii/ajoxi/issues",
        "source": "https://github.com/ajoxii/ajoxi.git"
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Ajoxi\\Website\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ajoxi\\Website\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "echo 'Autoload dumped!'"
        ],
        "start": [
            "echo \"No start script configured for PHP. You might want to use 'php -S localhost:8000 -t public/' or a similar command to serve your website.\""
        ],
        "lint": [
            "php-cs-fixer fix --dry-run --diff",
            "phpstan analyse src --level=max"
        ],
        "lint-fix": [
            "php-cs-fixer fix"
        ],
        "test": "phpunit",
        "build": [
            "echo \"No build script configured. This would be used if you had a build process (e.g., for assets with a PHP framework, or API documentation generation).\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
